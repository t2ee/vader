{
	"compilerOptions": {
        "module": "commonjs",
    	"outDir": "dist",
    	"target": "ES6",
    	"experimentalDecorators": true,
    	"emitDecoratorMetadata": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "declaration": true,
        "baseUrl": "./src",
        "paths": {
            "*": [ "./*" ]
        }
	},
	"compileOnSave": false,
    "include": [
        "src/*.ts"
    ]
}
